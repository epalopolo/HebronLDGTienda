# Database Configuration for Koyeb PostgreSQL
# Replace with your actual Koyeb PostgreSQL connection string
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Environment (development, production)
NODE_ENV=development
PORT=3000

# JWT Secret for authentication - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Security settings
BCRYPT_ROUNDS=10

# CORS settings
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Payment settings (for future Brubank integration)
BRUBANK_API_URL=https://api.brubank.com
BRUBANK_API_KEY=your-brubank-api-key
BRUBANK_WEBHOOK_SECRET=your-brubank-webhook-secret

# Email settings (for order notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password